<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tubiao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tubiao"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:id="@+id/tv_authen"
        android:text="真刻"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_username"
                    android:text="昵称"
                    android:textColor="@color/primary_text"
                    android:textSize="20dp"
                    />

                <com.sid.soundrecorderutils.util.EditTextUtil
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_username"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:hint="请填写真刻昵称"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_password"
                    android:text="密码"
                    android:textColor="@color/primary_text"
                    android:textSize="20dp"
                    />

                <com.sid.soundrecorderutils.util.EditTextUtil
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:hint="请填写真刻密码"
                    android:inputType="textPassword"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:id="@+id/tv_welcome1"
                android:text="记录一份证据"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_welcome2"
                android:text="拯救一个生命"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="25dp"
                />
        </LinearLayout>

    </FrameLayout>






    <ImageView
        android:id="@+id/iv_zhiwen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/zhiwen"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_zhuce"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/zhuce"
        />
</LinearLayout>
